.top{
  width: 100%;
  background-color: #fff;
}

.content{
  width: 86%;
  height: 1000rpx;
  margin: 0 auto;
  margin-top: 40rpx;
}

.show-card{
  width: 100%;
  height: 350rpx;
}

.title{
  margin-top: 160rpx;
