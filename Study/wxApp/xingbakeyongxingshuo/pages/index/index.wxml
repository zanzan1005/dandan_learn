<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-color="#dbdbdb" indicator-active-color="#00ae61">
  <block wx:for="{{imgUrls}}" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" bindtap="toBanner"
      data-index="{{index}}"/>
    </swiper-item>
  </block>
</swiper>

<view class="content">
  <text class="title">咖啡+祝福 即刻表心意</text>
  <view class="lists" >
    <block class="item" wx:for="{{Lists}}" wx:key="{{index}}">
      <view class="props" bindtap="toDetail" data-index="{{index}}">
        <image class="props-img" src="{{item.url}}"/> 
         <view class="props-name">{{item.title}}</view> 
      </view>
    </block>
  </view>

  <view class="props-footer">
    <view>
      <text class="props-history" bindtap="toHistory">购买历史</text>
    </view>
  </view>

</view>


