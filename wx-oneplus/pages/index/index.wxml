<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" class="swiper">
  <block wx:for="{{imgUrls}}" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" />
    </swiper-item>
  </block>
</swiper>
<van-tabs active="{{ active }}">
  <van-tab title="商品精选">
    <view class="content">
      <view class="product" wx:for="{{productLists}}" wx:key="{{index}}">
        <image src="{{item.src}}" class="product-image" bindtap="oneplus7Pro" />
        <view class="desc">
          <view class="title">{{item.title}}</view>
          <view class="container">
            <view class="price">{{item.price}}</view>
          <view class="minPrice small">{{item.smallPrice}}</view>
          </view>
          <view class="minPrice">{{item.minPrice}}</view>
        </view>
      </view>
      <view class="product gray" wx:for="{{productLists_gray}}" wx:key="{{index}}">
        <image src="{{item.src}}" class="product-image" bindtap="oneplus7Pro" />
        <view class="desc">
          <view class="title">{{item.title}}</view>
          <view class="price">{{item.price}}</view>
          <view class="minPrice">{{item.minPrice}}</view>
        </view>
      </view>
    </view>
  </van-tab>
  <van-tab title="耳机">内容 2</van-tab>
  <van-tab title="壳/膜">内容 3</van-tab>
  <van-tab title="适配器/数据线">内容 4</van-tab>
  <van-tab title="套装">内容 5</van-tab>
  <van-tab title="生活馆">内容 6</van-tab>
</van-tabs>