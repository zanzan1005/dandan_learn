swiper {
  width: 100%;
  height: 600rpx;
}

swiper image {
  width: 100%;
  height: 100%;
  display: block;
}

.content {
  width: 100%;
  height: 100%;
  padding-top: 60rpx;
  background: #f9f9f9;
}

.title {
  font-size: 15px;
  color: #333333;
  margin-left: 40rpx;
}

.lists {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-left: 2%;
  padding-right: 2%;
}

.item {
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}

.props {
  flex:0 0 44%;
  height: 280rpx;
  margin-top: 5%;
  margin-left: 2%;
  margin-right: 2%;
  border-radius: 20rpx;
  background: white;
  text-align: center;
}

.props-img {
  left: 0;
  top: 0;
  width: 98%;
  height: 220rpx;
  margin-top: 3rpx; 
  border-radius: 20rpx
}

.props-name {
  font-size: 23rpx;
  color: #666666;
  position: relative;
  width: 100%;
  top: 5rpx;
  align-content: center;
  text-align: center;
}

.props-footer {
  width: 100%;
  height: 100%;
  margin-top: 80rpx;
  margin-bottom: 150rpx;
  text-align: center;
}

.props-pay {
  width: 130rpx;
  height: 130rpx;
  margin-bottom: 10rpx;
}

.props-history {
  font-size: 32rpx;
  color: #0ca862;
  text-decoration: underline; 
}