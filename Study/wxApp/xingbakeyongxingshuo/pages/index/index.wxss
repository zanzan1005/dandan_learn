page{
  background-color: #f9f9f9;
}

swiper{
  width: 100%;
  height: 600rpx;
}

.slide{
  width: 100%;
  height: 90%;
}

.card-content{
  width: 100%;
  height: 100%;
  margin-top: 60rpx;
}

.content-title{
  font-size: 16px;
  color: #333333;
  margin-left: 40rpx;
}

.card-lists{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding-left: 2%;
  padding-right: 2%;
}

.card-block{
  width: 100%;
  height: 100%;
}

.card{
  border-radius: 20rpx;
  background-color: #fff;
  text-align: center;
  flex:0 0 44%;
  height: 280rpx;
  margin-top: 5%;
  margin-left: 2%;
  margin-right: 2%;
}

.card-image{
  left: 0px;
  top: 0px;
  width: 98%;
  height: 220rpx;
  margin-top: 3rpx; 
  border-radius: 20rpx;
}

.card-title{
  font-size: 12px;
  color: #666;
  text-align: center;
}

