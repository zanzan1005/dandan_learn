page{
  background: #f7f7f7;
}

.swiper{
  width: 100%;
  height: 700rpx;
  background: #f7f7f7;
}

.slide-image{
  width: 100%;
  height: 700rpx;
}

.desc{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  height: 150rpx;
}

.select{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  font-weight: 350;
}

.left,.right{
  margin-top: 15rpx;
  margin-left: 10rpx;
  font-size: 16px;
  color: gray;
}

.right{
  color: red;
  font-style: 14px;
}

.title1,.title2{
  font-size: 25px;
  font-weight: 200;
  margin-top: 60rpx;
  margin-left: 40rpx;
}

.title2{
  font-size: 20px;
  margin-top: 50rpx;
}

.one,.two{
  color: gray;
  font-size: 14px;
  font-weight: 100;
  margin-left: 30rpx;
  margin-top: 50rpx;
}

.two{
  color: gray;
  margin-top: 50rpx;
}

.footer{
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  background: #fff;
}

.tocard{
  width: 15%;
}

.image{
  width: 20px;
  height: 20px;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.add{
  width: 85%;
}

.btn{
  width: 100%;
  background: red;
  color: #fff;
}

.header{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.logo{
  width: 20%;
  height: 170rpx;
  margin-top: 60rpx;
  margin-left: 40rpx;
  border: 1.5px solid #f7f7f7;
}

.pro-logo{
  width: 150rpx;
  height: 150rpx;
}

.description{
  width: 60%;
  height: 170rpx;
  margin-left: 40rpx;
  margin-top: 60rpx;
}

.description_title{
  font-weight: 400;
  font-size: 16px;
}

.description_price{
  font-size: 14px;
  margin-top: 10rpx;
}

.del{
  color: gray;
}

.color{
  width: 100%;
  height: 200rpx;
}

.color-title{
  font-weight: 100;
  font-size: 16px;
  margin-left: 20rpx;
}

.color-content{
  width: 60%;
  display: flex;
  margin-top: 20rpx;
  justify-content: space-around;
}

.selected{
  height: 70rpx;
  width: 27%;
  font-size: 15px;
  text-align: center;
  color: red;
  border: 1.5px solid red;
}

.noSelected{
  height: 70rpx;
  width: 27%;
  background: #e7e7e7;
  color: #afafaf;
  font-size: 15px;
  text-align: center;
}

.size-content{
  width: 90%;
}

.gray{
  border: 1.5px solid #d4d4d4;
}

.number-content{
  display: flex;
  width: 35%;
  height: 70rpx;
  margin-left: 20rpx;
  margin-bottom: 200rpx;
  border: 1.5px solid #d4d4d4;
}

.reduceNum{
  width: 25%;
  border-right: 1.5px solid #d4d4d4;
}

.numInput{
  width: 50%;
  text-align: center;
}

.addNum{
  width: 25%;
  border-left: 1.5px solid #d4d4d4;
}

.bottom{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
}

.addCart{
  width: 50%;
  height: 100rpx;
  border-top: 50rpx;
  text-align: center;
  border: 1.5px solid #d4d4d4;
}

.buy{
  width: 50%;
  height: 100rpx;
  text-align: center;
  background: #ec0124;
  color: #fff;
}

