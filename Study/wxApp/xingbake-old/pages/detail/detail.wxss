  font-weight: 700;
  margin-left: 10rpx;
}

.card-list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 40rpx;
}

.cards{
  width: 31%;
  height: 160rpx;
}

.props{
  width: 100%;
  height: 70px;
  border-radius: 10rpx;
}

.title1{
  margin-top: 20rpx;
}

.gift-list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 40rpx;
}

.giftCards{
  width: 31%;
  height: 100rpx;
  border-radius: 10rpx;
  justify-content: space-between;
