body,html{
  width: 100%;
  height: 100%;
}
.swiper{
  width: 100%;
  height: 350px;
}
.slide-image{
  width: 100%;
  height: 350px;
}
.navbar{
  display: flex;
  white-space: nowrap;
  margin-top: 15px;
}
.navbar .item{
  display: inline-block;
  font-weight: 100;
  margin-left: 20px;
}
.navbar .item.active{
  color: red;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
}
.content{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  margin-top: -300rpx;
}
.product{
  width: 45%;
  height:200rpx;
  margin-top: 190px;
  margin-left: 20rpx;
}
.image{
  width: 400rpx;
  height: 400rpx;
}
.title{
  font-weight: 150;
  margin-left: 20px;
  font-size: 13px;
} 
.price{
  font-weight: 350;
  margin-left: 20px;
  margin-top: 10px;
  font-size: 15px;
}
.minPrice{
  color: #c0c0c0;
  font-size: 14px;
  margin-left: 20px;
  margin-top: 10px;
  text-decoration: line-through;
} 

