.banner{
  width: 100%;
  height: 600rpx;
}

.title{
  font-weight: bold;
  font-size: 16px;
  line-height: 60rpx;
  margin-top: 20rpx;
  margin-left: 60rpx;
}

.content{
  width: 90%;
  margin: 0 auto;
}

.child{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}

.card{
  width: 45%;
  margin-left: 25rpx;
  margin-top: 40rpx;
  box-shadow: 0 0 10px #bdbebd;
  border: 1px solid hsl(0, 0%, 88%);
  height: 240rpx;
  border-radius: 20rpx;
}

.card-image{
  width: 100%;
  height: 180rpx;
  border-radius: 20rpx;
}

.text{
  text-align: center;
  font-weight: bold;
  color: gray;
  line-height: 40rpx;
  font-size: 13px;
}

