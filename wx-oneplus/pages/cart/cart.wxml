<view class="box">
  <view class="title">
    <text class="desc">全场满99免运费</text>
  </view>
  <view class="lists" wx:for="{{lists}}" wx:key="{{index}}">
    <view class="content">
      <image class="lists-logo" src="{{item.src}}" bindtap="toIndex" />
      <view class="detail">
        <view class="props">{{item.title}}</view>
        <view class="props-price">{{item.price}}</view>
        <view class="reduceNum" bindtap="reduceNum">-</view>
        <input class="numInput" bindtap="changeNum" value="{{num}}" />
        <view class="addNum" bindtap="addNum">+</view>
        <view class="del" bindtap="del_lists">×</view>
      </view>
    </view>
  </view>
</view>

