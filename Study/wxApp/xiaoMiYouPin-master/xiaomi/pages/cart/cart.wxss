.goods-box{
    padding-bottom: 100rpx;
}
.cart-list{
    position: relative;
    padding: 20rpx 20rpx 20rpx 285rpx;
    height: 185rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.cart-list .cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 90rpx;
    width: 45rpx;
    height: 45rpx;
}

.cart-list .cart-thumb{
    top: 20rpx;
    left: 85rpx;
    width: 185rpx;
    height: 185rpx;
}
.cart-list .cart-pro-goods{
  position: absolute;
  left: 85rpx;
}
.cart-list .cart-pro-goods, .cart-pro-goods image{
  width: 180rpx;
  height: 180rpx;
}
.cart-list .cart-pro-name{
    display: inline-block;
    height: 105rpx;
    font-size: 25rpx;
}
.cart-list .cart-pro-price{
    display: flex;
    height: 90rpx;
    color:red;
    font-size: 25rpx;
}
.btn_box {  
    display: flex;  
    position: absolute;
     right: 0;
     float: right;
     margin-bottom: 5rpx;
     transform: translateY(-100%);
    }  
    
.cart-list .btn_box input {  
    margin: 0;  
    width: 40px;  
    text-align: center;  
    border: 1px solid #eee;  
    font-size: 16px;  
    height: 28px;  
    }  
    
.cart-list .btn_box button {  
    margin: 0;  
}  


.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 0 0 80rpx;
    box-sizing: border-box;
    background: #aaaaaa;
    color: #fff;
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon{
    position: absolute;
    right: 40rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
    background-size: 100%;
}
.order-icon image{
  width: 100%;
  height: 100%;
  
}
.content{
    display: flex;
}
.content-left{
    flex: 1;
    display: flex;
    justify-content: space-between;
    color: #fff;
}
.total{
    font-size: 34rpx;
}
.cart-toatl-price{
    font-size: 34rpx;
    width: 120rpx;
}
.content-right{
    width: 260rpx;
    text-align: center;
    background-color: red;
}
.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}

.cart{
    width: 100%;
    color:#fff;
    border-bottom: 3px solid #f4f3f3;
    display: inline-block;
}
.cart_grey{
    width: 200rpx;
    height: 180rpx;
    margin-top: 70rpx;
    margin-left: 100rpx;
}
.cart_right{
    display: inline-block;
    width: 40%;
}
.cartContent{
    margin-bottom: 30rpx;
    font-size: 30rpx;
    color:#83664a;
}
.btn{
    background-color: #7e6043;
    color:#fff;
}